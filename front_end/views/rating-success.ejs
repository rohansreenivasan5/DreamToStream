<!-- rating-success.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Rating Success</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <style>
    body {
      background-color: #F9F9F9;
    }

    h1 {
      text-align: center;
      margin-top: 50px;
    }

	h2 {
		text-align: center;
	}

    table {
      margin: 50px auto;
      border-collapse: collapse;
      width: 80%;
      background-color: #FFFFFF;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

    th,
    td {
      text-align: center;
      padding: 12px;
    }

    th {
      background-color: #007bff;
      color: white;
    }

    .selectable-row:hover {
      background-color: #EFEFEF;
      cursor: pointer;
    }

    button {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 10px 30px;
      border-radius: 5px;
      font-size: 16px;
      margin-top: 20px;
    }

    button:hover {
      background-color: #007bff;
      cursor: pointer;
    }

    a {
      text-decoration: none;
      color: #007bff;
    }
  </style>
</head>
<body>
  <h1>Rating Updated Successfully</h1>
  <h2>All Your Ratings</h2>  
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Rating</th>
        <th>Comments</th>
      </tr>
    </thead>
    <tbody>
      <% for (var i = 0; i < ratings.length; i++) { %>
        <tr>
          <td><%= ratings[i].id %></td>
          <td><%= ratings[i].name %></td>
          <td><%= ratings[i].value %></td>
          <td><%= ratings[i].comments %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <p>Thank you for using our site.</p>
  <a href="/">Back to home page</a>
</body>
</html>
